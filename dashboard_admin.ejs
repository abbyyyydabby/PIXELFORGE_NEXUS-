<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-purple-600 text-gray-900">
    <div class="max-w-6xl mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6">Welcome, <%= user.name %> (Admin)</h1>

        <!-- Add Project -->
        <div class="bg-white rounded p-4 shadow mb-6">
            <h2 class="text-xl font-semibold mb-2">Add Project</h2>
            <form action="/add-project" method="POST" class="flex gap-4">
                <input type="text" name="name" placeholder="Project Name" required class="border p-2 rounded w-1/3" />
                <input type="text" name="description" placeholder="Description" required class="border p-2 rounded w-1/2" />
                <button class="bg-blue-600 text-white px-4 py-2 rounded">Add</button>
            </form>
        </div>

        <!-- Project List -->
        <div class="bg-white rounded p-4 shadow mb-6">
            <h2 class="text-xl font-semibold mb-2">Projects</h2>
            <ul>
                <% projects.forEach(project => { %>
                    <li class="flex justify-between items-center border-b py-2">
                        <span><%= project.name %>: <%= project.description %></span>
                        <form action="/delete-project" method="POST" onsubmit="return confirm('Are you sure you want to delete this project?');">
                                <input type="hidden" name="project_id" value="<%= project.id %>">
                                <button type="submit">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </div>

        <!-- Upload Document -->
        <div class="bg-white rounded p-4 shadow mb-6">
            <h2 class="text-xl font-semibold mb-2">Upload Document</h2>
            <form action="/upload" method="POST" enctype="multipart/form-data" class="flex gap-4">
                <select name="project_id" required class="border p-2 rounded">
                    <% projects.forEach(project => { %>
                        <option value="<%= project.id %>"><%= project.name %></option>
                    <% }) %>
                </select>
                <input type="file" name="document" required class="border p-2 rounded" />
                <button class="bg-green-600 text-white px-4 py-2 rounded">Upload</button>
            </form>
        </div>

        <!-- Add User -->
        <div class="bg-white rounded p-4 shadow mb-6">
            <h2 class="text-xl font-semibold mb-2">Add Team Member</h2>
            <form action="/add-user" method="POST" class="grid grid-cols-4 gap-4">
                <input type="text" name="name" placeholder="Name" required class="border p-2 rounded" />
                <input type="email" name="email" placeholder="Email" required class="border p-2 rounded" />
                <input type="password" name="password" placeholder="Password" required class="border p-2 rounded" />
                <select name="role" class="border p-2 rounded">
                    <option value="lead">Lead</option>
                    <option value="developer">Developer</option>
                </select>
                <button class="bg-purple-600 text-white px-4 py-2 rounded col-span-4">Add User</button>
            </form>
        </div>

    </div>
</body>
</html>
